<UserControl x:Class="FlightSimulator.Views.Right"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="425*"></RowDefinition>

        </Grid.RowDefinitions>
        <Viewbox Grid.Row="1" >
            <TabControl>
           
                   <TabItem Header="Manual" FontWeight="Bold" Width="100" Height="25">
                    <local:Manual></local:Manual>
                </TabItem>
      
       
                     <TabItem Header="Auto Pilot" FontWeight="Bold" Width="100" Height="25">
                    <local:AutoPilot></local:AutoPilot>
                </TabItem>
                 
        </TabControl>
        </Viewbox>
    </Grid>
</UserControl>
